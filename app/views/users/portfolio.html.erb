<h1>My Portfolio</h1>

<div>
  <h3>Search Area</h3>
  <%= form_tag search_stocks_path, method: :get do %>
    <div>
      <%= text_field_tag :stock, params[:stock], placeholder: "Enter Stock Name" %>
    </div>
    <div>
      <%= button_tag "Search", type: :submit %>
    </div>
  <% end %>

  <% if @stock %>
    <div>
      <h3>Stock Info:</h3>
      <div>Name: <%= @stock.ticker %></div>
      <div>Company: <%= @stock.name %></div>
      <div>Price: <%= @stock.last_price %></div>
    </div>
  <% end %>
</div>
