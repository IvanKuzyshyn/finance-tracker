<h1>My Portfolio</h1>

<div>
  <h3>Search Area</h3>
  <%= form_tag search_stocks_path, remote: true, method: :get do %>
    <div>
      <%= text_field_tag :stock, params[:stock], placeholder: "Enter Stock Name" %>
    </div>
    <div>
      <%= button_tag "Search", type: :submit %>
    </div>
  <% end %>

  <div id="stock-search-result">
    <%= render "users/stock_search_result" %>
  </div>

  <% unless @tracked_stocks.empty? %>
    <div id="portfolio-table">
      <table>
        <thead>
        <tr>
          <td>Ticker</td>
          <td>Name</td>
          <td>Price</td>
          <td>Actions</td>
        </tr>
        </thead>
        <tbody>
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <td><%= stock.ticker %></td>
            <td><%= stock.name %></td>
            <td><%= stock.last_price %></td>
            <td>do</td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
